            <RadzenCard >
             <div class="row">
                    <h3>Текст запроса информации</h3>
                    <RadzenHtmlEditor @bind-Value=@value style="height: 500px; margin-bottom: 1rem;" Change=@OnChange Paste=@OnPaste Execute=@OnExecute>
