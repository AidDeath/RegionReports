@page "/test"
@inject FileService FileService
@inject NotificationService NotificationService

    <InputFile OnChange="@StartAsync"/>

    <RadzenUpload ChooseText="Выбрать файл" Url="upload/single" Multiple="false" Progress="@OnProgress" Change="@OnChange" />
    <RadzenProgressBar Value="@progress"/>


@code {
    private int progress;

    private async Task StartAsync(InputFileChangeEventArgs args){
        await FileService.UploadFileAsync(args.File);
    }

    private void Start(InputFileChangeEventArgs args){
        FileService.UploadFile(args.File);
    }

    private void OnProgress(UploadProgressArgs args)
    {
        progress = args.Progress;
    }

    private void OnChange(UploadChangeEventArgs args)
    {
        var file = args.Files.FirstOrDefault();
        if (file is null) return;


    }


}
