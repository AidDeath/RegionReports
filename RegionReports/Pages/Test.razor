@page "/test"
@inject ReportRequestService ReportRequestService
@inject NotificationService NotificationService
@inject AssignmentService  AssignmentService
@inject UserService UserService

<ReportRequestInfo ReportRequest="@rep" Collapsed="true"/>

@code {
    ReportRequestText rep;

    protected override void OnInitialized()
    {
        var a = AssignmentService.GetForUser(UserService.GetCurrentUserModel(), true);
        rep =  a.FirstOrDefault(a => a.ReportRequestText is not null).ReportRequestText;
    }

}
