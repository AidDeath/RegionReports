@using RegionReports.Enums
<img src="@path"/>


@code {
    private string path {get; set;}= string.Empty;

    protected override void OnInitialized()
    {
        path = DefineIconPath();
    }

    private string DefineIconPath(){
        switch  (FileType){
            case UploadedFileType.Word:
                return @"/images/file-word.svg";    
            case UploadedFileType.Excel:
                return @"/images/file-excel.svg";
            case UploadedFileType.Pdf:
                return @"/images/file-pdf-box.svg";
            default:
                return "/images/file-question.svg";

        }
    }

    [Parameter]
    public UploadedFileType FileType { get; set; }


}
